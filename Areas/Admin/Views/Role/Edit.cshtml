@model RoleEdit

@{
    ViewData["Title"] = "Edit Role";
}

<style>
    body {
        background-color: #000000;
    }
</style>
<style>
    /* Define neon effect */
    .neon-button {
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: color 0.4s, background-color 0.4s, box-shadow 0.4s;
    }

        .neon-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #0fd;
            z-index: -1;
            transition: opacity 0.4s, transform 0.4s;
            border-radius: 5px;
        }

        .neon-button:hover::before {
            opacity: 0.5;
            transform: scale(2);
        }

        /* Apply neon effect to buttons */
        .neon-button.edit:hover::before {
            background-color: #0f0;
        }

        .neon-button.details:hover::before {
            background-color: #00f;
        }

        .neon-button.delete:hover::before {
            background-color: #f00;
        }
</style>

<div class="container">
    <h1 style="color: white">Edit Role</h1>

    <div class="row">
        <!-- Left side (form) -->
        <div class="col-md-6">
            <form method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label" style="color: white"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label" style="color: white"></label>
                    <div class="col-sm-10">
                        <input asp-for="RoleName" class="form-control">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-success">Update</button>
                        <a asp-action="Index" class="btn btn-primary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Right side (card with user information) -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0" >Users in this role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title" >@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="EditUserInRole" asp-route-roleId="@Model.Id" class="btn btn-dark" style="width:auto">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>
